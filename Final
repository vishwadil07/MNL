a4_a19_1.n1.nps <- cal.nps(mnl,data.mnl,u1)
a4_a19_1.n2.nps <- cal.nps(mnl,data.mnl,u2)
a4_a19_1.n3.nps <- cal.nps(mnl,data.mnl,u3)

a4_a19_1.nps.mean <- percent(mean(a4_a19_1.n1.nps,a4_a19_1.n2.nps,a4_a19_1.n2.nps))


